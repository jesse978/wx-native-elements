/*点击样式*/

.hover {
    background-color: #e6e6e6 !important;
}

.qt_row {
    width: 100%;
    background: #fff;
}

.icon-rh_arrows {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 44rpx;
    height: 64rpx;
    font-size: 40rpx;
    color: #969696;
}

.list {
    box-sizing: border-box;
    padding: 0 40rpx 0 40rpx;
    /* margin-left: 35rpx; */
    display: flex;
    align-items: center;
}

.list_item_big {
    position: relative;
    height: 140rpx;
    background-color: #fff;
    align-items: center;
    border-bottom: 2rpx solid #E1E1E1;
}

.list_item_big .icon {
    width: 45rpx;
    height: 45rpx;
}

.list_item_big .content {
    display: flex;
    flex-direction: column;
}

.list_item_big .content .title {
    font-size: 30rpx;
}

.list_item_big .content .detail {
    font-size: 24rpx;
    margin-top: 10rpx;
    color: #969696;
}


/* 列表详细信息-小 */

.list_item_small {
    height: 100rpx;
    position: relative;
    align-items: center;
    background-color: #fff;
    border-bottom: 1rpx solid #E1E1E1;
}

.list_item_small .icon {
    width: 30.4rpx;
    height: 30.4rpx;
    margin-left: 5rpx;
    margin-right: 24rpx;
}

.list_item_small .text {
    margin-left: 23rpx;
    display: inline-flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 30rpx;
}


/* 无 icon 列表 */

.list_item_small .title {
    margin-left: 0 !important;
}

.list_item_small .value {
    flex: 1;
    display: inline-block;
    margin-left: 140rpx;
    text-align: right;
    padding-right: 10rpx;
    font-size: 30rpx;
    color: #969696;
    text-overflow: ellipsis;
    overflow: hidden;
    /* white-space: nowrap; */
}