/* components/problem-list/problem-list.wxss */
@import "/assets/style/public_icon.wxss";
@import "/app.wxss";
/* pages/problem/problem.wxss */
.problem-view {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.filter-box {
  height: 81rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 42rpx;
  color: #646464;
  border-top: #e6e6e6 solid 1px;
  border-bottom: #e6e6e6 solid 1px;
}

.floor-filter {
  margin-left: 36rpx;
}

.total-label {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: #646464;
}

.filter-title {
  display: flex;
  align-items: center;
}

.filter-item {
  display: flex;
  align-items: center;
}

.filter-item .icon-right_fill {
  margin-left: 10rpx;
  font-size: 12rpx;
}

.filter-rh .iconfont {
  display: inline-flex;
  margin: 0 8rpx 0 20rpx;
  font-size: 28rpx;
}

.serch-row {
  display: flex;
  align-items: center;
}

.serch-row .serch-input {
  margin-right: 24rpx;
  width: 590rpx;
}

.problem-body {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.problem-box {
  flex: 1;
  height: 0;
}

.problem-list {
  padding-top: 15rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.problem-list.list-padding {
  padding-bottom: 180rpx;
}

.problem-item {
  display: flex;
  align-items: center;
}

.checked-box {
  margin-right: 16rpx;
}

.problem-item .problem-block {
  /* margin-left: 20rpx; */
  background-color: #ffffff;
}

.problem-block.mini {
  width: 650rpx;
}

.bottom-box {
  position: fixed;
  bottom: 0rpx;
  padding: 10rpx 24rpx 28rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #ffffff;
  border-top: 1rpx solid #edeaea;
}

.checked-all {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: #646262;
  letter-spacing: 1rpx;
}

.bottom-box .btn {
  width: 550rpx;
}

.checked-all .blue {
  color: #017afd;
}

.switch-view {
  height: 68rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #017afd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fixed-switch {
  margin-right: 10rpx;
  font-size: 16rpx;
}

.total-box {
  padding: 0 30rpx;
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: #646464;
}

.problem-filter {
  padding: 0 27rpx;
  display: flex;
  background-color: #ffffff;
}

.problem-filter .scene-box {
  width: 173rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.problem-head-border {
  width: 146rpx;
  border-top: 2rpx solid #e6e6e6;
}

.problem-filter-border {
  align-self: center;
  height: 206rpx;
  border-right: 2rpx solid #e6e6e6;
}

.icon-explain {
  position: absolute;
  right: 0;
  bottom: 35rpx;
  width: 34rpx;
  height: 40rpx;
  font-size: 34rpx;
  color: #017afd;
}

.problem-box .bottom-divider {
  width: 700rpx;
}

.room-body {
  width: 100%;
  z-index: 10;
  padding-left: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.common-divider {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin: 8rpx 30rpx 10rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  line-height: 37rpx;
  color: #5b5b5b;
}

.common-title {
  font-size: 32rpx;
  font-family: PingFang SC;
  line-height: 45rpx;
  color: #646464;
}

/* .common-border-divider{
  
} */

.common-title .iconfont {
  display: inline-block;
  margin: 16rpx 16rpx 8rpx 0;
}

.total-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 37rpx;
  color: #505050;
}

.total-action .iconfont {
  margin-left: 20rpx;
  margin-right: 10rpx;
  color: #d8d8d8;
  font-size: 24rpx;
}

.total-action .yuan {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 26rpx;
  height: 26rpx;
  font-size: 16rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #d8d8d8;
}

.total-action .action {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 37rpx;
  color: #989898;
}

.total-action .action .iconfont {
  margin-left: 8rpx;
  font-size: 14rpx;
}

.room-item {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx 10rpx 0;
  width: 166rpx;
  height: 90rpx;
  background: #ffffff;
  border-radius: 4rpx;
  border: 2rpx solid #e4e4e4;
  font-size: 30rpx;
  font-weight: bold;
  font-family: PingFang SC;
  color: #646464;
}

.room-label {
  width: 120rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.room-line {
  height: 26rpx;
  border-left: 2rpx solid #646464;
}

.room-status {
  position: absolute;
  top: 6rpx;
  right: 12rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 33rpx;
  color: #c14641;
}
