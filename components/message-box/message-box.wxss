/* components/message-box.wxss */
.message_box {
  margin: 40rpx auto;
  width: 678rpx;
  height: 334rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  /* background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 20rpx 0rpx rgba(0, 0, 0, 0.1); */
  border-radius: 18rpx;
}
.message_box .icon_more {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.img {
  width: 208rpx;
  height: 198rpx;
}
.message_box .text {
  margin-top: 38rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(47, 47, 47, 1);
  opacity: 0.5;
  line-height: 45rpx;
}
