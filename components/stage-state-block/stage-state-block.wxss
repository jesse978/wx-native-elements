.problem-block {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 38rpx;
  height: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #c14641;
  border: 2rpx solid #ffffff;
  box-shadow: 0rpx 3rpx 6rpx rgba(0, 0, 0, 0.16);
  border-radius: 50%;
  color: #ffffff;
}

.icon-circle {
  font-size: 44rpx;
  color: #ffffff;
}

.icon-unfinished {
  color: #c14641;
}