/* components/stage-state-block/stage-state-block.wxss */
@import "/app.wxss";
.state-box {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #ffffff;
}

.state-box.unfinished {
  background-color: #dcdcdc;
}
.state-box.underway {
  background-color: #007de2;
}
.state-box.complete {
  background-color: #34ab16;
}
.state-box.skip {
  background-color: #ffd013;
}
