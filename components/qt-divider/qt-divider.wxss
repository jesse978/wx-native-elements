.qt-divider {
  width: 100%;
  text-align: center;
  font-size: 12rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center
}

.qt-divider-line {
  flex: 1;
  display: inline-block;
  border-top: 2rpx solid #E6E6E6;
}

.qt-divider-content {
  max-width: 70%;
  overflow: hidden;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 37rpx;
  color: #646464;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20rpx;
}