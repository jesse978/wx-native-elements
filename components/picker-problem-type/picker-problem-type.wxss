/* components/picker-problem-type/picker-problem-type.wxss */
@import "/assets/style/public_icon.wxss";

.picker-problem-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.38);
}

.picker-problem {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 560rpx;
  box-shadow: 0rpx 6rpx 15rpx rgba(0, 0, 0, 0.16);
}

.picker-problem .picker-head {
  height: 75rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1px rgba(60, 60, 67, 0.29) solid;
  border-radius: 24rpx 24rpx 0 0;
}

.picker-head .head-btn {
  padding: 0 56rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: #808080;
}

.picker-problem .picker-body {
  display: flex;
  height: 485rpx;
}

.picker-body .picker-column {
  overflow: auto;
  height: 485rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f9f9f9;
}

.picker-column .picker-item {
  width: 100%;
  min-height: 87rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 48rpx;
  color: #a0a0a0;
  border-left: 6rpx solid #0000;
}

.radio .picker-item.checked {
  border-left: 6rpx solid #007de2;
  color: #007de2;
  background-color: #ffffff;
}

.multiple .picker-item.checked {
  color: #007de2;
  background-color: #ffffff;
}

.picker-column:first-child {
  background-color: #f3f3f3;
}

.picker-item .iconfont {
  display: inline-block;
  margin-left: 6rpx;
  color: #007de2;
  opacity: 0;
}

.multiple .picker-item.checked .iconfont {
  opacity: 1;
}
