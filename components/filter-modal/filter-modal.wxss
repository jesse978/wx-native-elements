.filter_body .checked {
  background: rgba(47, 159, 255, 1);
  color: #fff;
}

.filter_bottom {
  margin-top: 10rpx;
  padding-top: 18rpx;
  border-top: 1px solid #f1f1f1;
}

.filter_bottom .reset_btn {
  float: left;
  width: 145rpx;
  height: 69rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f1f1f1;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 42rpx;
  color: #4093ff;
}

.filter_bottom .save_btn {
  float: right;
  width: 145rpx;
  height: 69rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #4093ff;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 42rpx;
  color: #f1f1f1;
}
