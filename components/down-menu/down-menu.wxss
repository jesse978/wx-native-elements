/* components/down-menu/down-menu.wxss */
@import '/assets/style/public_icon.wxss';

.user_head{
  position: relative;
  margin-top: -1rpx;
  padding: 0 40rpx;
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  z-index: 20;
}
.userIdentity{
  line-height: 80rpx;
  display: flex;
  align-items: center;
  color: #969696;
}
.user_head .iconfont {
  margin-left: 15rpx;
}

.user_head .icon-rh_arrows {
  float: right;
  font-size: 40rpx;
  color: #969696;
  transition:all 0.5s;
}
.user_head .isDown {
  transform: rotate(90deg)
}
.downMenu{
  position: absolute;
  width: 100%;
  height: 0rpx;
  overflow: hidden;
  background: #fff;
  transition: height 0.5s;
  z-index: 20;
}

.menuItem{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #969696;
  border-top: #f5f5f5 solid 1rpx;
}
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
  transition: all .5s;
  z-index: 10;
}