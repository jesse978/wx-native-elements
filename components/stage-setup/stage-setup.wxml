<scroll-view class="scroll" scroll-y>
  <block wx:for="{{list}}">
    <view class="setup">
      <view class="setup-title">
        <text>{{item.name}}</text>
      </view>
      <block wx:for="{{actionList}}" wx:for-item="act" wx:for-index="actIndex">
        <view wx:if="{{userInfo.opRange||item.stage==1||item.stage==13||actIndex==3}}" class="setup-epc" data-item="{{item}}" bindtap="{{act.event}}">
          <text>{{act.name}}</text>
          <text class="iconfont icon-rh_arrows"></text>
        </view>
      </block>
    </view>
