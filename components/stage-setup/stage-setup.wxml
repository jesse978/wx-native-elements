        <text class="iconfont icon-rh_arrows"></text>
      </view> -->
      <view wx:if="{{index==0}}" class="setup-epc" data-data-type="3" data-item="{{item}}" bind:tap="jumpInstallPage">
        <text>可安装统计</text>
        <text class="iconfont icon-rh_arrows"></text>
      </view>
    </view>
  </block>
  <view class="setup" wx:if="{{type=='product'}}">
    <view class="setup-title">
      <text>部件配置</text>
    </view>
    <view class="setup-epc" bindtap="jumpParts">
      <text>主体部件配置</text>
      <text class="iconfont icon-rh_arrows"></text>
    </view>
