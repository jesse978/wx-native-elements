/* components/off-line-msg/off-line-msg.wxss */

.off_line {
  position: relative;
  box-sizing: border-box;
  width: 686rpx;
  height: 857rpx;
  padding: 76rpx 38rpx 55rpx 38rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  font-family: PingFangSC-Medium, PingFang SC;
}
.logo {
  width: 132rpx;
  height: 132rpx;
}
.title {
  margin: 70rpx 0;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #2f2f2f;
  line-height: 50rpx;
}

.detail {
  width: 100%;
  font-size: 24rpx;
  font-weight: 400;
  color: #969696;
  line-height: 42rpx;
}

.bottom_label {
  margin: 16rpx 0 40rpx 0;
  font-size: 28rpx;
  font-weight: 400;
  color: #969696;
  line-height: 52rpx;
  text-align: center;
  text-decoration: underline;
}
.btn {
  width: 610rpx;
  height: 87rpx;
  border-radius: 10rpx;
  border: 2rpx solid #969696;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #6d6d6d;
  line-height: 87rpx;
  text-align: center;
}
/*遮罩层*/
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 50;
  opacity: 0;
  display: none;
  background: rgba(71, 71, 71, 0.5);
  transition: all 0.3s;
}
.mask.show {
  opacity: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
